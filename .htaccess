# -------------------------------
# Default Index Files
# -------------------------------
DirectoryIndex index.php index.html

# -------------------------------
# Custom 500 Error Page
# -------------------------------
ErrorDocument 500 /500.html

# -------------------------------
# Enable Rewrite Engine & Force HTTPS
# -------------------------------
RewriteEngine On

# Redirect HTTP to HTTPS on your Render domain
RewriteCond %{HTTPS} off
RewriteRule ^ https://seg-tuitions.onrender.com%{REQUEST_URI} [L,R=301]

# -------------------------------
# Optional PHP Settings for Development
# -------------------------------
# Uncomment during development only
# php_flag display_errors On
# php_value error_reporting E_ALL
# php_value date.timezone Africa/Lusaka

# -------------------------------
# Optional: Disable directory listing
# -------------------------------
# Only if Render allows Options in .htaccess
# Options -Indexes
