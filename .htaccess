# Enable PHP processing
AddHandler application/x-httpd-php .php

# Set the default index file
DirectoryIndex index.php index.html

# Enable PHP error reporting for debugging (Use only during development)
php_flag display_errors On
php_value error_reporting E_ALL

# Set timezone and other PHP configurations
php_value date.timezone America/New_York
php_value mbstring.http_input auto

# Custom 500 error page (Optional, ensure the path is correct)
ErrorDocument 500 /500.html

# Enable Rewrite engine for clean URLs and force HTTPS (Fix the condition and rule)
RewriteEngine On
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://www.segtuition.great-site.net/$1 [R=301,L] 